# Hostinger + React SPA + PHP backend configuration
RewriteEngine On

# Increase PHP upload limits for video uploads
php_value upload_max_filesize 1000M
php_value post_max_size 1000M
php_value max_execution_time 900
php_value max_input_time 900
php_value memory_limit 1024M
php_value max_file_uploads 20

# Enable file uploads
php_flag file_uploads On

# Temp directory for uploads
php_value upload_tmp_dir /tmp

# Direct access to PHP files (upload, OTP, etc.)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.php$
RewriteRule ^ - [L]

# Serve static files directly (uploads, images, videos)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(uploads|assets)/ - [L]

# Route all PHP backend requests properly
RewriteRule ^(upload_video|upload_photo|firebase_otp|send_otp|verify_otp|save_profile|api|auth|get_data|customer_register|driver_register)\.php$ $1.php [L,QSA]

# React SPA routing - all other routes go to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]

# CORS (adjust domains as needed)
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# Handle preflight OPTIONS
RewriteCond %{REQUEST_METHOD} =OPTIONS
RewriteRule ^ - [R=204,L]

# Security headers
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript
</IfModule>

# Hide PHP version
<IfModule mod_headers.c>
  Header unset X-Powered-By
</IfModule>
ServerTokens Prod